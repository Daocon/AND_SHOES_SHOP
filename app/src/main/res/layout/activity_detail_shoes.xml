<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".src.DetailShoesActivity">

    <ImageView
        android:id="@+id/iv_shoes"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:src="@drawable/shoe1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_shoes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Air Max 270"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_shoes"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_shoes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$150"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shoes_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_shoes_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Nike Air Max 270 delivers visible cushioning under every step. Updated for modern comfort, it pays homage to the original 1991 Air Max 180 with an exaggerated tongue top and heritage logo."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shoes_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_shoes_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shoes_description"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_shoes_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shoes_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Red"
            android:background="@drawable/bg_btn_color_red"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Blue"
            android:background="@drawable/bg_btn_color_blue"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Black"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_color_black"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="White"
            android:background="@drawable/bg_btn_color_white"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_shoes_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_shoes_color"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_shoes_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shoes_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="32"
            android:background="@drawable/bg_btn_color_white"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="34"
            android:background="@drawable/bg_btn_color_white"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="35"
            android:background="@drawable/bg_btn_color_white"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="36"
            android:background="@drawable/bg_btn_color_white"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="37"
            android:background="@drawable/bg_btn_color_white"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="38"
            android:background="@drawable/bg_btn_color_white"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_shoes_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_shoes_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $150"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:background="@drawable/br_buttonadd"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>